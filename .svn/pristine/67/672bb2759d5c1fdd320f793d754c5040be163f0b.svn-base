<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
         android:id="@+id/llyt_fragment0"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
		style="@style/Linearlayout_Style">
        <TextView 
            android:id="@+id/tv_fragment0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tuijian"
            android:gravity="center_horizontal"
            android:textColor="@color/black"/>
         <ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:clickable="true"
            	android:layout_gravity="center_horizontal"
            	android:src="@drawable/homepage_slide" />
    </LinearLayout>
    <LinearLayout 
         android:id="@+id/llyt_fragment1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         style="@style/Linearlayout_Style">
        <TextView 
            android:id="@+id/tv_fragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suoyou"
            android:gravity="center_horizontal"
            android:textColor="@color/black"/>
        <ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:clickable="true"
            	android:layout_gravity="center_horizontal"
            	android:src="@drawable/homepage_slide" />
    </LinearLayout>
</LinearLayout>